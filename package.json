    "react-icons": "^5.3.0",
    "react-modal": "^3.16.1",
    "react-router-dom": "^6.27.0",
    "react-table": "^7.8.0",
    "react-to-print": "^2.15.1",
    "react-toastify": "^10.0.5"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "^7.25.9",
